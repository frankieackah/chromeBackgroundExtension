{
    "manifest_version": 2, 

    "name": "Gratia Background",
    "description": "Changes the background of new tab in Chrome, add your name, and goal for the day.",
    "version": "1.0.0",
    "icons": {
        "128": "icon128.png"
    },

    "browser_action":{
        "default_icon":"icon.png"
    },

    "chrome_url_overrides": {
        "newtab": "index.html"
    }, 


    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
      }
}